<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="edu.unsis.recetario.treatements.AddTreatement">

    <android.support.v7.widget.Toolbar
        android:id="@+id/headerActivityAddTreatement"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Añadir Medicamento"
        android:theme="@style/AppTheme.ToolbarStyle">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/headerActivityAddTreatement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/cvTreatement"
                android:layout_gravity="center"
                card_view:cardCornerRadius="7dp"
                android:layout_weight="0.74">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Medicamento"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre del medicamento"
                        android:id="@+id/editText7"
                        android:lines="1"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:ems="10"
                        android:hint="Descripción"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:minLines="5" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/Treatement"
                android:layout_gravity="center"
                card_view:cardCornerRadius="7dp"
                android:layout_weight="0.74">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="221dp"
                    android:padding="16dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Dosis"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <EditText
                            android:id="@+id/ediText7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Dosis a tomar "
                            android:lines="1"
                            android:maxLines="1" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.29"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.28"
                            android:text="tiempo entre tomas:"
                            tools:ignore="HardcodedText,InefficientWeight" />

                        <EditText
                            android:id="@+id/editText15"
                            android:layout_width="61dp"
                            android:layout_height="35dp"
                            android:ems="10"
                            android:inputType="number" />

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/tiempo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_weight="0.26"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duración"
                            tools:ignore="InefficientWeight" />

                        <EditText
                            android:id="@+id/editText17"
                            android:layout_width="58dp"
                            android:layout_height="32dp"
                            android:ems="10"
                            android:inputType="number" />

                        <Spinner
                            android:id="@+id/spinner3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/duracion" />

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="102dp"
                            android:layout_height="37dp"
                            android:text="Indefinido"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/ccvTreatement"
                android:layout_gravity="center"
                card_view:cardCornerRadius="7dp"
                android:layout_weight="0.74">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:weightSum="1">


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:text="Fechas"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:text="Fecha inicio:"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/editText18"
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:ems="10"
                            android:inputType="date"
                            tools:ignore="InefficientWeight" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:text="Fecha fin:"
                            tools:ignore="HardcodedText" />

                        <EditText
                            android:id="@+id/editText19"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:ems="10"
                            android:inputType="textPersonName" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button"
                android:layout_width="138dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:text="Añadir" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
